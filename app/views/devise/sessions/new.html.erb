<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="custom-form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      label: "Email",
                      label_html: { class: "login-form-label" },
                      input_html: { autocomplete: "email", class: "login-form-input" } %>
        </div>
        <div class="custom-form-group">
          <%= f.input :password,
                      required: false,
                      label: "Password",
                      label_html: { class: "login-form-label" },
                      input_html: { autocomplete: "current-password", class: "login-form-input"  } %>
        </div>
        <%= f.input :remember_me, as: (:boolean if devise_mapping.rememberable?),
                    label: "Remember me",
                    label_html: { class: "login-form-label" } %>
      </div>

      <div class="form-actions flexbox-column">
        <%= f.button :submit, "Log In", class: "main-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
