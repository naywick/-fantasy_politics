<div class="row homepage-container">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="custom-form-group">
          <%= f.input :username,
                             required: true,
                             autofocus: true,
                             label: "Username",
                             label_html: { class: "login-form-label" },
                             input_html: { autocomplete: "username", class: "login-form-input" } %>
        </div>
        <div class="custom-form-group">
          <%= f.input :email,
                    required: true,
                    label: "Email",
                    label_html: { class: "login-form-label" },
                    input_html: { autocomplete: "email", class: "login-form-input" }%>
        </div>
        <div class="custom-form-group">
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      label: "Password",
                      label_html: { class: "login-form-label" },
                      input_html: { autocomplete: "new-password", class: "login-form-input"  } %>
        </div>
        <div class="custom-form-group">
          <%= f.input :password_confirmation,
                      required: true,
                      label: "Confirm password",
                      label_html: { class: "login-form-label" },
                      input_html: { autocomplete: "new-password", class: "login-form-input"  } %>
        </div>
          <div class="custom-form-group">
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
          </div>
      </div>


      <div class="form-actions flexbox-column">
        <%= f.button :submit, "Submit", class: "main-button" %>
      </div>
    <% end %>


  </div>
</div>
