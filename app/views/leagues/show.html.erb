<div class="container">

<h1 class="league-header"><%= @league.name %></h1>
    <!-- Upper container -->
<div class="league-statistics">
  <div class="league-numbers">
    <h4>Members</h4>
    <p><%= @league.political_parties.count %></p>
  </div>
  <div class="league-leader">
    <h4>Founder</h4>
    <div class="leader-details">
      <div>
        <p class="party-title"><%= @league.political_parties.first.name %></p>
        <p class="league-user"><%= @league.political_parties.first.user.username %></p>
      </div>
      <div class="leader-score">
        <p><%= @league.political_parties.first.score %></p>
      </div>
    </div>
  </div>
</div>



    <!-- Lower container -->
<h4>Parties</h4>
<% @league.political_parties.each do |party| %>
  <div class="league-parties">
    <div class="league-party-card">
      <div class="party-rank">
        <p>1</p>
      <div class="user-avatar" style="background-image: url(<%= cl_image_path current_user.cl_photo %>);"></div>
      </div>
      <div class="party-name">
        <div>
        <p class="party-title"><%= party.name %></p>
        <p class="league-user"><%= party.user.username %></p>
        </div>
      </div>
      <div class="party-score"><%= party.score %></div>
    </div>
  </div>
<% end %>


<h3>Add party to league</h3>
<% current_user.political_parties.each do |political_party| %>
  <%= link_to league_league_connections_path(political_party: political_party, league_id: @league), {method: :post} do %>
    <div class="league-card">
        <%= political_party.name  %>
    </div>
  <% end %>
<% end %>
</div>







<% if false %>
<div class="container">
  <h1><%= @league.name %></h1>
  <div class="table">
    <div class="table-row">
      <p style="margin-top: 20px;">Leaderboard</p>
    </div>
    <% @league.political_parties.each do |party| %>
      <div class="table-row">
        <div>
          <p>1</p>
        </div>
        <div>
          <p><%= party.name %></p>
        </div>
          <div>
            <p style="color: #DB5461">10</p>
          </div>
      </div>
    <% end %>
  </div>
</div>




<% unless @league.political_parties == [] %>
  <h2 style="text-align: left;">Rankings</h2>
  <% @league.political_parties.each do |party| %>
    <%= link_to political_party_path(party) do %>
      <h3><%= party.name %> </h3>
    <% end %>
    <p><%= party.user.username %></p>
  <% end %>
<% end %>


<% end %>
